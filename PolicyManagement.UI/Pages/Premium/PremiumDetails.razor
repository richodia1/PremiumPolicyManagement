@page "/PremiumDetail/{Id:int}"
<section class="employee-detail">
    <h1 class="page-title">Details View </h1>
    <div class="col-12 row">
        <div class="col-2">
            <a class="btn btn-primary edit-btn" @onclick="@NavigateToOverview">Cancel</a>
        </div>
        <div class="col-10 row">
            <div class="col-xs-12 col-sm-8">

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">First Name :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext"> @policyRequestModelDetails.FirstName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Last name :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext"> @policyRequestModelDetails.LastName </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Birthdate :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext"> @policyRequestModelDetails.DateOfBirth </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Phone Number :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext"> @policyRequestModelDetails.PhoneNumber</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Registration Number :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext"> @policyRequestModelDetails.RegistrationNumber </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Vehicle Model :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@policyRequestModelDetails.CarModel </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Premier Type :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext"> @policyRequestModelDetails.PremType</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Premier Rate :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@policyRequestModelDetails.Premium  </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Vehicle Make :</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext"> @policyRequestModelDetails.CardMake </label>
                    </div>
                </div>

               
            </div>
        </div>
    </div>


</section>

